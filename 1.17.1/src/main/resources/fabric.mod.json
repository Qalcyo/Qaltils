{
  "schemaVersion": 1,
  "id": "wyvtils",
  "version": "${version}",
  "name": "Wyvtils",
  "description": "Utilities, for 1.17.1.",
  "authors": [
    "Wyvest"
  ],
  "contact": {
    "issues": "https://github.com/Wyvest/Wyvtils/issues/",
    "sources": "https://github.com/Wyvest/Wyvtils/"
  },
  "license": "GNU Lesser General Public License version 3 (LGPLv3)",
  "environment": "client",
  "accessWidener" : "wyvtils.accesswidener",
  "entrypoints": {
    "client": [
      {
        "adapter": "kotlin",
        "value": "net.wyvest.wyvtils.seventeen.Wyvtils"
      }
    ],
    "preLaunch": [
      "gg.essential.loader.stage0.EssentialSetupPreLaunch"
    ],
    "modmenu": [
      "net.wyvest.wyvtils.seventeen.config.WyvtilsModMenu"
    ]
  },
  "mixins": [
    "mixins.wyvtils.json"
  ],
  "depends": {
    "fabricloader": ">=0.11.0",
    "fabric": "*",
    "fabric-language-kotlin": ">=1.6.4+kotlin.1.5.30",
    "minecraft": "1.17.x",
    "java": ">=16",
    "fabric-key-binding-api-v1": "*"
  },
  "recommends": {
    "modmenu": ">=2.0.0"
  }
}